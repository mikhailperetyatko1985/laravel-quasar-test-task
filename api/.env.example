APP_NAME=LaravelQuasarApp
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Europe/Moscow
APP_URL=https://your-domain.com

APP_LOCALE=ru
APP_FALLBACK_LOCALE=ru
APP_FAKER_LOCALE=ru_RU

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Настройки PHP
PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Настройки базы данных MySQL
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel_app
DB_USERNAME=laravel_user
DB_PASSWORD=laravel_strong_password_change_me

# Настройки сессий и кеша
SESSION_DRIVER=memcached
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=localhost

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Memcached настройки
CACHE_STORE=memcached
CACHE_PREFIX=laravel_app

MEMCACHED_HOST=memcached
MEMCACHED_PORT=11211
MEMCACHED_USERNAME=null
MEMCACHED_PASSWORD=null

# Redis настройки (опционально)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail настройки (настройте по необходимости)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS настройки (если будете использовать)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher настройки (если будете использовать)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# CORS настройки для Sanctum
# Для локальной разработки с портом 8096:
# SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8096,127.0.0.1,127.0.0.1:8096
# Для production укажите свой домен:
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8096,127.0.0.1,127.0.0.1:8096,your-domain.com

# Yandex Parser микросервис (парсинг отзывов с Яндекс.Карт)
# URL микросервиса yandex-parser (внутри Docker сети)
YANDEX_PARSER_URL=http://yandex-parser:5000
# Timeout для запросов в секундах (парсинг занимает ~2-3 минуты)
YANDEX_PARSER_TIMEOUT=300
# TTL кеша результатов парсинга в секундах (по умолчанию 1 час = 3600)
YANDEX_PARSER_CACHE_TTL=3600
