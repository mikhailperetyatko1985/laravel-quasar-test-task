# Настройки SSL для продакшена

# Режим: ip (для Let's Encrypt с IP адресом, работает с 2026)
SSL_MODE=ip

# Замените на ваш публичный IP адрес
SERVER_IP=78.140.243.138

# Домен (не используется в режиме ip)
SERVER_DOMAIN=

# Email для уведомлений Let's Encrypt (ОБЯЗАТЕЛЬНО!)
LETSENCRYPT_EMAIL=your-email@example.com

# Автоматически получать сертификат при первом запуске
AUTO_INIT_SSL=yes
